<style>
	:root {
		--tut-blue: #1e2261;
		--tut-bg: #f8fafc;
		--text-main: #1e293b;
		--text-light: #64748b;
	}

	* { box-sizing: border-box; transition: 0.3s cubic-bezier(0.4, 0, 0.2, 1); }

	body {
		margin: 0; background: var(--tut-bg); color: var(--text-main);
		font-family: 'Plus Jakarta Sans', sans-serif;
	}

	main { max-width: 900px; margin: 0 auto; padding: 3rem 1rem; }

	.main-header { text-align: center; margin-bottom: 2.5rem; }
	.logo { max-width: 250px; height: auto; }
	.divider { width: 35px; height: 3px; background: var(--tut-blue); margin: 1rem auto; border-radius: 10px; }
	.tagline { font-size: 0.7rem; font-weight: 800; color: var(--text-light); text-transform: uppercase; letter-spacing: 2px; }

	.search-box { position: sticky; top: 1rem; z-index: 100; margin-bottom: 2.5rem; max-width: 500px; margin-inline: auto; }
	.pill {
		background: rgba(255,255,255,0.9); backdrop-filter: blur(10px);
		border: 1px solid #e2e8f0; border-radius: 20px; display: flex; align-items: center; padding: 4px 18px;
		box-shadow: 0 10px 25px rgba(0,0,0,0.05);
	}
	#buscador { width: 100%; padding: 10px; border: none; background: transparent; outline: none; font-size: 0.95rem; }

	/* GRID DE DEPARTAMENTOS (2 columnas) */
	.deptos-grid { 
		display: grid; 
		grid-template-columns: repeat(2, 1fr); 
		gap: 16px; 
		align-items: start;
	}

	.depto-card { background: #fff; border: 1px solid #edf2f7; border-radius: 20px; overflow: hidden; height: fit-content; }
	.trigger {
		width: 100%; padding: 1.25rem; border: none; background: transparent; cursor: pointer;
		display: flex; align-items: center; justify-content: space-between;
	}
	.depto-card.active { border-color: var(--tut-blue); box-shadow: 0 8px 20px rgba(30, 34, 97, 0.06); }
	.depto-card.active .chevron { transform: rotate(180deg); color: var(--tut-blue); }

	.depto-name { display: block; text-align: left; font-weight: 800; color: var(--tut-blue); font-size: 1rem; }
	.depto-count { display: block; text-align: left; font-size: 0.7rem; color: var(--text-light); font-weight: 600; }

	.panel { max-height: 0; overflow: hidden; background: #fafbfc; }
	.depto-card.active .panel { max-height: 2000px; padding-bottom: 1rem; }

	.personal-stack { padding: 0 1rem; display: flex; flex-direction: column; gap: 8px; }
	.user-item {
		background: #fff; border: 1px solid #f1f5f9; border-radius: 14px; padding: 0.75rem;
		display: flex; flex-direction: column; gap: 0.75rem;
	}
	.user-meta { display: flex; align-items: center; gap: 0.6rem; }
	.user-avatar {
		width: 34px; height: 34px; background: #f0f4ff; color: var(--tut-blue);
		border-radius: 10px; display: flex; align-items: center; justify-content: center;
		font-weight: 800; font-size: 0.85rem; flex-shrink: 0;
	}
	h3 { margin: 0; font-size: 0.8rem; font-weight: 700; line-height: 1.2; }
	.user-role { font-size: 0.6rem; color: var(--text-light); font-weight: 700; text-transform: uppercase; }

	.user-actions { 
		display: flex; 
		justify-content: center; 
		gap: 8px; 
		padding-top: 0.6rem; 
		border-top: 1px solid #f8fafc;
	}
	.btn-call, .icon-btn {
		width: 32px; height: 32px; border-radius: 50%; display: flex; align-items: center;
		justify-content: center; text-decoration: none; font-size: 0.8rem; border: 1px solid #e2e8f0;
	}
	.btn-call { background: var(--tut-blue); color: white; border: none; }
	.wa { background: #e8f9ee; border-color: #d1f2db; }
	.mail { background: #f1f5f9; }

	.footer { text-align: center; margin-top: 4rem; padding-bottom: 2rem; opacity: 0.5; }
	.footer p { font-size: 0.7rem; font-weight: 700; margin: 0; }
	.footer span { font-size: 0.6rem; font-weight: 800; letter-spacing: 2px; }

	/* M칍VIL: Vuelve a 1 columna */
	@media (max-width: 700px) {
		.deptos-grid { grid-template-columns: 1fr; }
	}
</style>

<script>
	document.querySelectorAll('.trigger').forEach(btn => {
		btn.addEventListener('click', () => {
			btn.parentElement.classList.toggle('active');
		});
	});

	const search = document.getElementById('buscador') as HTMLInputElement;
	const cards = document.querySelectorAll('.depto-card');

	search?.addEventListener('input', () => {
		const val = search.value.toLowerCase();
		cards.forEach(card => {
			const isMatch = card.textContent?.toLowerCase().includes(val);
			(card as HTMLElement).style.display = isMatch ? 'block' : 'none';
			if (val !== '' && isMatch) card.classList.add('active');
			else if (val === '') card.classList.remove('active');
		});
	});
</script>
</body>
</html>